extends ../layout

block content
     .row
        .col-sm-8
            h1 Food Added in Cart
        .col-sm-4
            a(href="/wishs/add", class="btn btn-success float-right" , id="i") Missed Something!?    
        table.table
            thead
                tr
                    th Name
                    th Price
            tbody
                each product in products
                    tr
                        td=product.name
                        td=product.price
                        td
                            a(href="/wishs/delete/"+product._id, class="btn btn-danger", id="l") Delete